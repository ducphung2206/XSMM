# ============================================
# XSMM Copilot - Environment Variables
# Copy to .env and fill in values
# ============================================

# PostgreSQL Database
POSTGRES_USER=xsmm
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=xsmm_copilot

# Database URL (for API connection)
DATABASE_URL=postgresql://xsmm:your_secure_password_here@postgres:5432/xsmm_copilot

# API Configuration
ENVIRONMENT=development
DEBUG=true

# AI Services
LLM_PROVIDER=gemini  # gemini | openai | deepseek

GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash

OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_MODEL=deepseek-chat

# pgAdmin (optional - for database management UI)
PGADMIN_EMAIL=admin@xhome.sg
PGADMIN_PASSWORD=admin123
